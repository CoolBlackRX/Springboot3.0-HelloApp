<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Spring 配置属性获取  -->
    <springProperty scope="context" name="LOG_PATH" source="logging.path" defaultValue="./log"/>
    <springProperty scope="context" name="APPLICATION_NAME" source="spring.application.name"/>
    <springProperty scope="context" name="PORT" source="server.port"/>
    <springProperty scope="context" name="ENV" source="spring.profiles.active"/>
    <!-- log 属性配置  -->
    <property name="MAX_FILE_SIZE" value="20MB"/>
    <property name="log.pattern"
              value="%date{yyyy-MM-dd HH:mm:ss} | %highlight(%p) | %boldYellow(%c) | %M:%boldGreen(%L) | %m%n"/>
    <property name="log.file" value="%date{yyyy-MM-dd HH:mm:ss} | %p | %c | %M:%L | %m%n"/>
    <property name="CHARSET" value="UTF-8"/>
    <!--日志文件保存-->
    <appender name="FILE_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APPLICATION_NAME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/log/${APPLICATION_NAME}-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
        </rollingPolicy>
        <append>true</append>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${log.file}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
        </filter>
    </appender>
    <!--控制台日志输出-->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${log.pattern}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
    </appender>
    <springProfile name="dev">
        <logger name="org.springframework" level="INFO"/>
        <root level="INFO">
            <!-- 启用日志打印格式 -->
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="FILE_LOG"/>
        </root>
    </springProfile>
</configuration>
